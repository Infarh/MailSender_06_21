<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MailSender"
        Title="Рассыльщик почты"
        Width="800" Height="450">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Exit_OnClick"/>
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Панели компоновки">
                <TabControl TabStripPlacement="Bottom">
                    <TabItem Header="StackPanel">
                        <StackPanel>
                            <Button HorizontalAlignment="Left" Margin="5,5,0,3">Кнопка 1</Button>
                            <Button HorizontalAlignment="Center" Margin="10,5" Padding="15,25,5,7">Кнопка 2</Button>
                            <Button Margin="10">Кнопка 3</Button>
                            <TextBox>Поле ввода текста</TextBox>
                            <Rectangle Height="15" Fill="DarkBlue" Stroke="Red" StrokeThickness="3"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="123"/>
                                <TextBox Text="Поле ввода" MinWidth="120" MaxWidth="200" Margin="5,0"/>
                                <Ellipse Width="70" Stroke="Red" Fill="Blue"/>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Grid">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="13*"/>
                                <RowDefinition Height="23*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="84*"/>
                                <ColumnDefinition Width="183*"/>
                                <ColumnDefinition Width="127*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="1" Grid.Row="1" Content="123" Margin="50,5,30,0"/>
                            <Ellipse Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Stroke="Red"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="DockPanel">
                        <DockPanel>
                            <Button Content="Кнопка 1" DockPanel.Dock="Top"/>
                            <Button Content="Кнопка 2" DockPanel.Dock="Bottom"/>
                            <Button Content="Кнопка 3" DockPanel.Dock="Right"/>
                            <Button Content="Кнопка 4"/>
                            <Rectangle Stroke="Red" StrokeThickness="5" Fill="DarkBlue" RadiusX="125.82" RadiusY="125.82"/>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Canvas">
                        <Canvas>
                            <Button Content="Кнопка 1" Padding="30,5"
                                    Canvas.Bottom="30" Canvas.Right="70"/>
                            <Button Content="Кнопка 2" Padding="30,5"
                                    Canvas.Top="30" Canvas.Left="50"/>
                            <Button Content="Кнопка 3" Padding="30,5"
                                    Canvas.Right="50" Canvas.Top="10"/>
                            <Button Content="Кнопка 4" Padding="30,5"
                                    Canvas.Bottom="10" Canvas.Left="10"/>
                        </Canvas>
                    </TabItem>
                    <TabItem Header="WrapPanel">
                        <WrapPanel>
                            <Button Padding="40,5">Кнопка 1</Button>
                            <TextBox VerticalContentAlignment="Center" Width="120">Поле ввода 1</TextBox>
                            <Button Padding="40,5">Кнопка 2</Button>
                            <Button Padding="40,5">Кнопка 3</Button>
                            <TextBox VerticalContentAlignment="Center" Width="120">Поле ввода 1</TextBox>
                            <Button Padding="40,5">Кнопка 4</Button>
                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="UniformGrid">
                        <UniformGrid Rows="1">
                            <Button>Кнопка 1</Button>
                            <Ellipse Fill="DarkBlue"/>
                            <Rectangle Fill="Red" RadiusX="68" RadiusY="68"/>
                            <Calendar/>
                        </UniformGrid>
                    </TabItem>
                    <TabItem Header="ViewBox">
                        <Viewbox>
                            <StackPanel Width="5000">
                                <Button Content="123"/>
                                <Button Content="123" FontSize="150"/>
                                <Button Content="123"/>
                            </StackPanel>
                        </Viewbox>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Списки рассылки"></TabItem>
            <TabItem Header="Сервера"></TabItem>
            <TabItem Header="Письма"></TabItem>
            <TabItem Header="Статистика"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
